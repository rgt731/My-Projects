    <div class="navbar navbar-default">
        <div class="container-fluid colorTheme">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Pik Yak", "Index", "Yak")</li> 
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "FAQ" ? "active" : "")">@Html.ActionLink("FAQ", "FAQ", "Yak")</li> 
                </ul>

                <form class="navbar-form navbar-right" action="/Yak/SearchYak" method="get">
                    <div class="form-group is-empty">
                        <input type="text" class="form-control col-md-6" name="searchString" id="searchString" placeholder="Search">
                        <span class="material-input"></span>
                    </div>                              
                </form>                

            </div>
        </div>
    </div>    

    
    <!-- Modal -->
    <div id="PostModal" class="modal fade modalSize" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content modalSize">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title postTitle">PikYak Post</h4>
                </div>
                <div class="modal-body">
                    <div class="input-group textBox">
                        <textarea type="text" class="form-control textBox" placeholder="Your Message" aria-describedby="basic-addon1"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <h3>Kindness: </h3>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 70%">
                            <span class="sr-only">45% Complete</span>
                        </div>
                    </div>
                    <button type="button" class="btn btn-default postCancel close" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-default postCancel close" data-dismiss="modal" value="submit">Submit</button>
                </div>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <a href="#" id="postYakButton" class="btn btn-default btn-fab" data-toggle="modal" data-target="#PostModal"><i class="material-icons">create</i></a>          
        <hr />
        <footer>
            <p class="footer">&copy; @DateTime.Now.Year - PikYak.com</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
