<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PikYak Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--<link rel="icon" type="image/png" href="~/Content/pik yak2.png" />-->

    <meta name="LayoutPage" content="Layout Page" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PIK YAK", "Index" , "Yak" , new { area="" }, new { @class="navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("FAQ", "FAQ", "Yak")</li>
                </ul>
                <button type="button" class="btn btn-default rightTab yak" data-toggle="modal" data-target="#PostModal">Post<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>     
                
                
                
                
                <div class="navbar-right">                            
                    <button type="submit" class="btn btn-default rightTab searchButt">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>                
                    <div class="form-group rightTab">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                </div>
                
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="footer">&copy; @DateTime.Now.Year - PikYak.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <div id="PostModal" class="modal fade modalSize" role="dialog">
        <div class="modal-dialog">

            
            <div class="modal-content modalSize">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title postTitle">PikYak Post</h4>
                </div>
                @using (Html.BeginForm("get", "Post",
                FormMethod.Get, new { @class = "", role = "Post" }))
                {
                <form>
                    <div class="modal-body">
                        <div class="input-group textBox">
                            <textarea type="text" class="form-control textBox" placeholder="Your Message" aria-describedby="basic-addon1" name="yakMessage" value="yakMessage" id="yakMessage" method="get"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <h3>Kindness: </h3>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 70%">
                                <span class="sr-only">45% Complete</span>
                            </div>
                        </div>
                        <button type="button" class="btn btn-default postCancel close" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-default postCancel close" data-dismiss="modal" value="submit" name="submit" id="submit">Submit</button>
                    </div>
                </form>
                }
            </div>

        </div>
    </div>



</body>
</html>
