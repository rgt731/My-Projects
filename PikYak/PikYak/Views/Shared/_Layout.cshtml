<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PikYak Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="icon" type="image/png" href="~/Content/pik yak2.png" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PIK YAK", "Index" , "Home" , new { area="" }, new { @class="navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("FAQ", "Faq", "Yak")</li>
                </ul>
                <button type="button" class="btn btn-default rightTab yak">PikYak <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button> 
                <div class="navbar-right">                            
                    <button type="submit" class="btn btn-default rightTab searchButt">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>                
                    <div class="form-group rightTab">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                </div>
                
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="footer">&copy; @DateTime.Now.Year - PikYak.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
