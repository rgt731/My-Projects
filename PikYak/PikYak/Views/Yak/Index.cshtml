@model IEnumerable<PikYak.Models.Like>

@{
    ViewBag.Title = "Index";
    var yaks = new List<PikYak.Models.Yak>();

    yaks.Add(new PikYak.Models.Yak { Text = "yakyakyakyak", Latitude = 2, Longitude = 3, Timestamp = DateTime.Now });
    yaks.Add(new PikYak.Models.Yak { Text = "Here's a Really long Yak that fills multiple lines because it is so long and has so many characters. More characters, in fact, than are actu",
        Latitude = 2, Longitude = 3, Timestamp = DateTime.Now });

    yaks.Add(new PikYak.Models.Yak { Text = "yakyakyakyak", Latitude = 2, Longitude = 3, Timestamp = DateTime.Now });
    yaks.Add(new PikYak.Models.Yak { Text = "I still have no idea what I'm doing", Latitude = 2, Longitude = 3, Timestamp = DateTime.Now });
    yaks.Add(new PikYak.Models.Yak { Text = " ", Latitude = 2, Longitude = 3, Timestamp = DateTime.Now });

}

<div class="jumbotron">
    <h1>Welcome To PikYak</h1>
    <p class="lead">Sharing positivity all over the world!</p>

</div>

@{ 
    foreach (var yak in yaks)
    {
        Html.RenderPartial("~/Views/Yak/YaksPartial.cshtml", yak);
    }
}
   


<div class="row">

    <!--create as many panels as we have movies-->
    @foreach (var yak in Model)
    {

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> User: @yak.UserId</h3>
            </div>
            <div class="panel-body">
           
                <p> Time: @yak.Timestamp</p>
                <p>Yak ID:  @yak.YakId</p>
            </div>
            <div class="panel-footer">
                <!--created a url thats is composed as such-->
                <a href="/Home/Yak/Like/@yak.Id" class="glyphicon glyphicon-heart-empty"> Like Button</a>
          

            </div>
        </div>
    }
</div>




