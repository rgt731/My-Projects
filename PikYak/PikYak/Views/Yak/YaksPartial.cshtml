@model PikYak.Models.YakViewModel

@{
    string encodedText = HttpUtility.UrlEncode(Model.Yak.Text);
}
    <div class="row flex" >
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary yak">
                <div class="panel-heading">
                    <div class="container-fluid panel-container">
                        <div class="col-xs-4 text-left">
                            {@Model.Yak.Latitude, @Model.Yak.Longitude}
                        </div>
                        <div class="col-xs-4 text-center">
                            @Model.Yak.Sentiment (@Model.Yak.Confidence%)
                        </div>
                        <div class="col-xs-4 text-right">
                            @Model.Yak.Timestamp
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-xs-4 text-left">
                        <img src="http://tinygraphs.com/spaceinvaders/@encodedText?theme=duskfalling&numcolors=2&size=220&fmt=svg" />
                    </div>
                    <div class="col-xs-8 text-center">
                        <p>
                            @Model.Yak.Text
                        </p>
                        <p>
                            @ViewBag.ErrorMessage
                        </p>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="panel-container">
                        <div class="row">
                            <div class="col-xs-9 col-xs-offset-2">
                                <div class="col-xs-4 text-left">    
                                    <!--Report button-->
                                    <a href="/Yak/Report?yakId=@Model.Yak.Id" class="yakbutton">
                                        <span class="glyphicon glyphicon-flag" aria-hidden="true">(@Model.ReportCount)</span>
                                    </a>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <!--Like button-->
                                    <a href="/Yak/Like?yakId=@Model.Yak.Id" class="yakbutton like-button">
                                        <span class="glyphicon glyphicon-heart-empty" aria-hidden="true">(@Model.LikeCount)</span>
                                    </a>
                                </div>
                                <!--Reply Button-->
                                <div class="col-xs-4 text-right">
                                    <a href="~/Yak/Create?replyId=@Model.Yak.Id" class="yakbutton reply-button">
                                        <span class="glyphicon glyphicon-share" aria-hidden="true"> </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

